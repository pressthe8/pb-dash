rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the 'pr_images' path
    // Allow write access only if the user is authenticated and their UID matches the userId in the path
    match /pr_images/{userId}/{imageId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}